<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CRM</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
</head>
<body class="flex flex-row space-x-4 ">
<header class="flex flex-col overflow-y-auto inset-y-0 z-50 w-72 ">
    <ul class="menu bg-base-200 rounded-box w-56 gap-y-1">
        <li><a is-active-page page-active-class="menu-active" only-exact-matches="true" asp-page="/Index">Dashboard</a></li>
        <li><a is-active-page page-active-class="menu-active" only-exact-matches="true" asp-page="/Account">Account</a></li>
        <li><a is-active-page page-active-class="menu-active" only-exact-matches="true" asp-page="/Contact">Contacts</a></li>
        <li><a is-active-page page-active-class="menu-active" only-exact-matches="true" asp-page="/Deal">Deals</a></li>
    </ul>
</header>
<main role="main" class="grow">
    @RenderBody()
</main>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>